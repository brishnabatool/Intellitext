<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">
        <!-- Customize your theme here. -->

    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="myCustomToolbar" parent="ThemeOverlay.AppCompat">
        <item name="android:textColorPrimary">#f4efef</item>
        <item name="android:textColorSecondary">#C6D8FF</item>
    </style>

    <style name="myAB" parent="Base.Widget.AppCompat.Light.ActionBar">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="AppThemeAB" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionBarStyle">@style/myAB</item>
    </style>

</resources>
